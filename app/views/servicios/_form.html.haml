= form_for @servicio do |f|
  - if @servicio.errors.any?
    #error_explanation
      %h2= "#{pluralize(@servicio.errors.count, "error")} prohibited this servicio from being saved:"
      %ul
        - @servicio.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :servicio
    = f.text_field :servicio
  .field
    = f.label :costo
    = f.text_field :costo
  .field
    = f.label :descripcion
    = f.text_area :descripcion
  .actions
    = f.submit 'Save'
